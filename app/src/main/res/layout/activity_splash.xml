<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/splash_screen_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="1.8"
        android:scaleY="3.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splash_bg"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="@string/splash_background" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.25"
        android:scaleY="0.25"
        app:layout_constraintBottom_toBottomOf="@+id/splash_screen_bg"
        app:layout_constraintEnd_toEndOf="@+id/splash_screen_bg"
        app:layout_constraintStart_toStartOf="@+id/splash_screen_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shop"
        android:contentDescription="@string/app_logo" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

</androidx.constraintlayout.widget.ConstraintLayout>