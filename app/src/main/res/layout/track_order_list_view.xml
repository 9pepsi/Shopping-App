<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="30sp"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/order_list_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Order ID:\n{ORDER_ID}"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/order_list_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_list_order_id"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Ordered At:\n{ORDER_DATE}"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/order_list_order_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:text="# of Items:\n{NO}"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/order_list_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_list_order_quantity"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:text="Total Price:\n{PRICE}"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
</RelativeLayout>