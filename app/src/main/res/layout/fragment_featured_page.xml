<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="-10dp"
    android:scaleY="0.9"
    android:scaleX="0.9"
    tools:context=".FeaturedPageFragment">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:auto_cycle="true"
            app:delay="100"
            app:placeholder="@color/white"
            app:error_image="@color/black"
            app:corner_radius="100"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:scaleX="1.25"
                android:scaleY="1.25"
                android:src="@drawable/ic_outline_whatshot_24"
                android:contentDescription="@string/hot_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/featured_products"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="25sp"
                android:padding="10dp"/>
        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_fp1"
            android:layout_width="100dp"
            android:layout_height="275dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fp_img_1"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/product_img"
                    android:scaleType="centerCrop"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/fp_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fp_img_1"
                    android:padding="10dp"
                    android:text="@string/placeholder_name"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fp_price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fp_name_1"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:padding="10dp"
                    android:text="@string/placeholder_price"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_fp2"
            android:layout_width="100dp"
            android:layout_height="275dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fp_img_2"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/product_img"
                    android:scaleType="centerCrop"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/fp_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fp_img_2"
                    android:padding="10dp"
                    android:text="@string/placeholder_name"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fp_price_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fp_name_2"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:text="@string/placeholder_price"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_fp3"
            android:layout_width="100dp"
            android:layout_height="275dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fp_img_3"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/product_img"
                    android:scaleType="centerCrop"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/fp_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fp_img_3"
                    android:padding="10dp"
                    android:text="@string/placeholder_name"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fp_price_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fp_name_3"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:padding="10dp"
                    android:text="@string/placeholder_price"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>